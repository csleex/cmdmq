. /etc/rc.subr

name=cmdmq_receiver
rcvar=cmdmq_receiver_enable

command="/usr/sbin/daemon"
command_args="-f -p /usr/local/${name}_pid python /usr/local/sbin/${name}.py"

load_rc_config ${name}
: ${cmdmq_receiver_enable:="NO"}

run_rc_command "$1"

